<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DorianApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DorianApp"
    Title="DorianApp">
    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:HomePage}"
                Route="View/HomePage" />
        </Tab>
        <Tab Title="Infos" Icon="info.png">
            <ShellContent
                Title="Infos"
                ContentTemplate="{DataTemplate local:InfoPage}"
                Route="View/InfoPage" />
        </Tab>
        <Tab Title="Add" Icon="add.png">
            <ShellContent
                Title="Add"
                ContentTemplate="{DataTemplate local:AddPage}"
                Route="View/AddPage" />

        </Tab>
        <Tab Title="Search" Icon="search.png">
            <ShellContent
                Title="Search"
                ContentTemplate="{DataTemplate local:SearchPage}"
                Route="View/SearchPage" />

        </Tab>

    </TabBar>

</Shell>    
