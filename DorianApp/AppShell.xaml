<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DorianApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:DorianApp.Views"
    Title="DorianApp">
    <TabBar>
        <Tab Title="Accueil" Icon="home.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:HomePage}"
                Route="HomePage" />
        </Tab>
        <Tab Title="Infos" Icon="info.png">
            <ShellContent
                Title="Infos"
                ContentTemplate="{DataTemplate views:InfoPage}"
                Route="InfoPage" />
        </Tab>
        <Tab Title="Ajouter" Icon="add.png">
            <ShellContent
                Title="Add"
                ContentTemplate="{DataTemplate views:AddPage}"
                Route="AddPage" />
        </Tab>
        <Tab Title="Rechercher" Icon="search.png">
            <ShellContent
                Title="Search"
                ContentTemplate="{DataTemplate views:SearchPage}"
                Route="SearchPage" />
        </Tab>
    </TabBar>
</Shell>