<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DorianApp.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to the HomePage !"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Large"
            />

        <FlexLayout>
            <Image
                 Source="trefle.jpg"
                 HeightRequest="185"
                 Aspect="AspectFit"
                 SemanticProperties.Description="Just a beautiful trefle" />
            <Image
                Source="leprechaun.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Just a beautiful leprechaun" />
        </FlexLayout>
        
        
    </VerticalStackLayout>
</ContentPage>